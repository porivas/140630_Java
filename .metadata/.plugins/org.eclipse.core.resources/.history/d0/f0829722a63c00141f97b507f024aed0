public class MyConnectionPool_mine implements Connection {
	
	private Connection realCon;
	private MyConnectionPool_mine pool;
	
	List<Connection> conList;
	
	private static MyConnectionPool_mine instance = new MyConnectionPool_mine();
	
	public static MyConnectionPool_mine getInstance(){
		return instance;
	}
	
	private MyConnectionPool_mine(){
		try{
		conList = new Vector<Connection>();
		Class.forName("oracle.jdbc.OracleDriver");
		String urlPath="jdbc:oracle:thin:@61.72.16.181:5021:orcl";
		String userid = "c##user02";
		String userpw = "user02";
		// 프록시라는 개념
		
		
		for(int i = 0; i<10; i++){
			conList.add(
					new MyConnection(
							DriverManager.getConnection(urlPath, userid, userpw),
							this));
		}
		}catch(Exception e){
			e.printStackTrace();
		}
		
	}
	public Connection getConnection()throws Exception{
		return conList.remove(0);
	}
	
	public void returnConnection() throws Exception{
		
	}
	

}
